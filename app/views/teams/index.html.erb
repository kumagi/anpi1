<%- model_class = Team -%>
<div class="page-header">
  <h1>課一覧</h1>
</div>

<table class="table table-striped table-condensed">
  <thead>
    <tr>
      <th>課名</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @teams.each do |team| %>
      <tr>
        <td><%= team.team_name %></td>
        <td>
          <%= link_to edit_icon,
                      edit_team_path(team), :class => 'btn btn-mini btn-primary' %>
          <%= link_to delete_icon,
                      team_path(team),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => "課 #{team.team_name} を消して宜しいですか？")) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to add_icon,
            new_team_path,
            :class => 'btn btn-primary' %>
