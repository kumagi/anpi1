<%= form_for @team, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label "課名", :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :team_name, :class => 'text_area' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit "OK", :class => 'btn btn-primary' %>
    <%= link_to "キャンセル",
                teams_path, :class => 'btn' %>
  </div>
<% end %>
