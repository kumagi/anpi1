<%- model_class = AnpiInfo -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:syachiku) %>:</strong></dt>
  <dd><%= @anpi_info.syachiku %></dd>
  <dt><strong><%= model_class.human_attribute_name(:hurt_info) %>:</strong></dt>
  <dd><%= @anpi_info.hurt_info %></dd>
  <dt><strong><%= model_class.human_attribute_name(:family_info) %>:</strong></dt>
  <dd><%= @anpi_info.family_info %></dd>
  <dt><strong><%= model_class.human_attribute_name(:member_info_id) %>:</strong></dt>
  <dd><%= @anpi_info.member_info_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:location_info) %>:</strong></dt>
  <dd><%= @anpi_info.location_info %></dd>
  <dt><strong><%= model_class.human_attribute_name(:syachiku_reason) %>:</strong></dt>
  <dd><%= @anpi_info.syachiku_reason %></dd>
  <dt><strong><%= model_class.human_attribute_name(:contact) %>:</strong></dt>
  <dd><%= @anpi_info.contact %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              anpi_infos_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_anpi_info_path(@anpi_info), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              anpi_info_path(@anpi_info),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
