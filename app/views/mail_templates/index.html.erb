<h1>メールテンプレート管理画面</h1>

<table class="table table-striped table-hover table-condensed">
  <thead>
  <tr>
    <th></th><th></th><th></th>
    <th>
       <!-- <td><input type="button" value="決定"></td> -->
       <!--<input type="button" value="追加">-->
       <td>追加</td>
       <td><%= link_to add_icon, new_mail_template_path, :class=>"btn btn-primary" %></td>
    </th>
  </tr>


  <tr>
    <td>select</td>
    <td>メールタイトル(Title)</td>
    <td>メール本文(Body)</td>
    <td>管理名(Mailname)</td>
    <th></th>
    <th></th>
    <th></th>
  </tr>
  </thead>
  <tbody>
<% @mail_templates.each do |mail_template| %>
  <tr>
    <td><input type="radio" name="defult" ></td>
    <td><%= mail_template.title %></td>
    <td><%= mail_template.body %></td>
    <td><%= mail_template.mailName %></td>
    <!--<td><%= link_to 'Show', mail_template %></td>-->
    <td><%= link_to edit_icon, edit_mail_template_path(mail_template), :class=>"btn btn-info btn-mini" %></td>
    <td><%= link_to delete_icon, mail_template, :method=>"delete" ,:class=>"btn btn-danger btn-mini", data: { confirm:'Are you sure?'} %></td>
  </tr>
<% end %>
</tbody>
</table>

