<%- model_class = Project -%>
<div class="page-header">
  <h1>部署一覧</h1>
</div>
<table class="table table-striped table-condensed">
  <thead>
    <tr>
      <th>部署名</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @projects.each do |project| %>
      <tr>
        <td><%= project.p_name %></td>
        <td>

          <%= link_to edit_icon,
                      edit_project_path(project), :class => 'btn btn-mini btn-primary' %>
          <%= link_to delete_icon,
                      project_path(project),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => "#{project.p_name} を消去してよろしいですか？")) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to add_icon,
            new_project_path,
            :class => 'btn btn-primary' %>
