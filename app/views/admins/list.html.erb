<h1>管理者一覧</h1>
<table class="table table-striped table-hover table-condensed">
  <thead>
  <th>ユーザ名</th>
  <th>登録日時</th>
  <th>操作</th>
  </thead>
  <tbody>
  <% @admins.each do |admin| %>
  <tr>
     <td>
      <% if admin == current_admin %>
        <%= link_to admin.name, admin_path %>
      <% else %>
        <%= admin.name %>
      <% end %>
      </td>
      <td> <%= time_format(admin.created_at) %> </td>
      <td>
        <% if admin == current_admin %>
          <%= link_to "編集", admin_path, :method=>"get", :class=>"btn btn-info btn-mini" %>
        <% else %>
          <%= link_to "削除", delete_admin_path(admin.id), :method=>"delete", :class=>"btn btn-danger btn-mini", :confirm=>"ユーザ #{admin.name} を削除してよろしいですか？"%>
        <% end %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>
<%= button_to "新規作成", admins_new_path, :class=>"btn btn-primary",:method=>:get %>
